#!/usr/bin/python
# -*- coding:utf-8 -*-
import cherrypy
import os
os

class OnePage(object):
    def index(self):
        return "one page!"
    index.exposed = True

class HelloWorld(object):
    # 通过属性引用另一个对象，cherrypy解析URL的时候就会沿着属性引用的道路前进
    onepage = OnePage()

    def index(self):
        return "Hello, world!"
    index.exposed = True

    # 定义了一个参数，cherrypy会将URL中的同名参数映射过来
    def hello(self, name='you'):
        return "hello %s" % name
    hello.exposed = True

cherrypy.quickstart(HelloWorld())
